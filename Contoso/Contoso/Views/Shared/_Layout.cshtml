<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Un tout tout petit peu d'aide de Mario'">
    <meta name="author" content="Sebastien, a votre service">

    <title>Contoso - Northwind</title>
    <!-- Bootstrap Core CSS -->
    <link href="../../Content/bootstrap.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="../../Content/metisMenu.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../../Content/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="../../Content/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!--@Styles.Render("~/Content/css")-->
    <!--@Scripts.Render("~/bundles/modernizr")-->
</head>
<body>

    
    
    
    
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Contoso</a>
            </div> 
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Product", "Products")"><i class="fa fa-bar-chart-o fa-fw"></i> Products<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("AddProduct", "Product", "Add Product")">Add Product</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Product", "Search Product")">Search Product</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Category", "Categories")"><i class="fa fa-bar-chart-o fa-fw"></i>Categories<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("AddCategory", "Product", "Add Product")">Add Category</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Category", "Categories")">Search Category</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->    
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Supplier", "Suppliers")"><i class="fa fa-table fa-fw"></i>Suppliers<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("AddSupplier", "Supplier", "Add Supplier")">Add Supplier</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Supplier", "Suppliers")">Search Supplier</a>
                                </li>
                            </ul>
                        </li>
                       </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()

                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
 
<!-- jQuery -->
<script src="../../Scripts/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="../../Scripts/bootstrap.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="../../Scripts/metisMenu.js"></script>
<!-- Custom Theme JavaScript -->
<script src="../../Scripts/sb-admin-2.js"></script>




@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
