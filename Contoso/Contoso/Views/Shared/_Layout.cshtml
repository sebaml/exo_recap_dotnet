<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              <!--  @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Contoso Northwind", "Index", "Home")</li>
                    <li>@Html.ActionLink("Fr", "About", "Home")</li>  <!-- text , action, controller-->
                    <li>@Html.ActionLink("En", "Contact", "Home")</li>
                </ul>
               <!-- <p class="nav navbar-text navbar-right">Hello, @User.Identity.Name!</p>-->
            </div>
        </div>
    </div>
<div class="container body-content">
    
    <ul class="container body-content">
        <li>@Html.ActionLink("Products", "Index", "Product")</li>
        <ul>
            <li>@Html.ActionLink("Add Product", "AddProduct", "Product") </li>
            <li>@Html.ActionLink("Search Product", "Index", "Product") </li>
        </ul>
        <li>@Html.ActionLink("Categories", "Index", "Category")</li> <!-- text , action, controller-->
        <ul>
            <li>@Html.ActionLink("Add Categories", "AddCategory", "Category") </li>
            <li>@Html.ActionLink("Search Categories", "Index", "Category") </li>
        </ul>
        <li>@Html.ActionLink("Suppliers", "Index", "Supplier")</li>
        <ul>
            <li>@Html.ActionLink("Add Supplier", "AddSupplier", "Supplier") </li>
            <li>@Html.ActionLink("Search Supplier", "Index", "Supplier") </li>
        </ul>
    </ul>
    @RenderBody()
    <hr/>
   
    <!-- <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>-->
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
